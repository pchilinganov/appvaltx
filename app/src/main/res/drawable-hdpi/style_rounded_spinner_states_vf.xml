    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="11dp"
                android:right="4dp"
                android:bottom="4dp"
                />
            <solid android:color="#FFF"/>
            <stroke
                android:width="1.3dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#D6D6D6"
                android:centerColor="#D6D6D6"
                android:endColor="#D6D6D6"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="12dp" />
        </shape>
    </item>

