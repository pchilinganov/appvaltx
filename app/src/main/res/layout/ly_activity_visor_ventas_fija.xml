        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ly_adjunta_evidencia" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
            <TextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Adjuntar evidencia*"/>
            <View android:layout_width="10dp" android:layout_height="10dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_cloud_upload_black_24dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <TextView android:textSize="14dp" android:id="@+id/tvHoraATIS" android:background="@drawable/style_rounded_table_relative_states" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_column="1" android:text="Hora" android:layout_weight="1" android:layout_row="0"/>
        </LinearLayout>
        <Button android:textSize="12dp" android:textColor="@color/colorWhite" android:id="@+id/btnVerificarDocumento" android:background="@drawable/botonpulsado_general" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margenLateral_portrait_login_5p" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/activity_margenLateral_portrait_login_5p" android:text="Verificar Documento" android:drawableLeft="@drawable/ic_check_bold"/>
