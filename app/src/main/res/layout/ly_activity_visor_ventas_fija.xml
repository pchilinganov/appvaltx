    <LinearLayout android:orientation="vertical" android:id="@+id/llMain" android:background="@drawable/style_rounded_dialog" android:padding="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#157dde" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Consultar documento del Cliente"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/cb_tipoIncidencia_tv" android:paddingLeft="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Tipo de Incidencia APP/WEB"/>
