        </LinearLayout>
        <AutoCompleteTextView android:textSize="15dp" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/cb_ctipo_doc_2" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:hint="Tipo Doc." android:editable="false" android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" android:layout_centerHorizontal="true" android:inputType="none" android:windowSoftInputMode="stateAlwaysHidden" android:overlapAnchor="false"/>
        <EditText android:textSize="14sp" android:gravity="center_vertical" android:id="@+id/num_doc_cli_2" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:inputType="number"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/tvOperacionComercial" android:paddingLeft="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Operación Comercial"/>
        <AutoCompleteTextView android:textSize="15dp" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/asas" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:hint="Seleccione" android:editable="false" android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" android:layout_centerHorizontal="true" android:inputType="none" android:windowSoftInputMode="stateAlwaysHidden" android:overlapAnchor="false"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/cb_idcuenta_tv" android:paddingLeft="6dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Operación comercial"/>
        <AutoCompleteTextView android:textSize="15dp" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/cb_tratamiento_2" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:hint="Seleccione" android:editable="false" android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" android:layout_centerHorizontal="true" android:inputType="none" android:windowSoftInputMode="stateAlwaysHidden" android:overlapAnchor="false"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/tvTelfMigra" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Teléfono a migrar"/>
        <EditText android:textSize="14sp" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/telefono_migrar_2" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:maxLength="9" android:layout_weight="1" android:inputType="number"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/txt_cdepartamento_tv" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Departamento"/>
        <AutoCompleteTextView android:textSize="15dp" android:textColor="@color/colorBlack" android:gravity="center_vertical" android:id="@+id/txt_cdepartamento_visor" android:background="@drawable/style_rounded_edittext_states_vf" android:paddingLeft="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:hint="Seleccione" android:editable="false" android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp" android:layout_centerHorizontal="true" android:inputType="none" android:windowSoftInputMode="stateAlwaysHidden" android:overlapAnchor="false"/>
        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/txt_cprovincia_tv" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Provincia"/>
