        <TextView android:textSize="14sp" android:textColor="@color/colorTextGray" android:id="@+id/cb_idcategoria_tv" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="Tipo Producto"/>
