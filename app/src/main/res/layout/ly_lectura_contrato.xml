<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textSize="12dp" android:textColor="@color/colorWhite" android:id="@+id/btniniciarlectura" android:background="@drawable/botonpulsado" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margenLateral_portrait_login_5p" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/activity_margenLateral_portrait_login_5p" android:text="Iniciar Lectura" android:layout_below="@+id/btnevaluar"/>
        <RelativeLayout android:id="@+id/rltext" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/btniniciarlectura">
            <TextView android:id="@+id/leercontrato" android:background="@color/colorGrayBackgroundCell" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buen día, hemos validado correctamente sus datos, damos inicio a la grabacion. \10\10 Su nombre completo es Ivan Alvarado Osorio\10\10 El contrato del producto que esta contratando se enviará a su domicilio en formato físico.\10\10 Usted está adquiriendo un TRIO PLANO LOCAL 30 MB ESTANDAR DIGITAL HD, a una renta mensual promocional de S/ 120.90 incluido IGV por los 3 primeros meses, posteriormente, la renta mensual será de S/150.90 incluido IGV, el cual se instalarà en plazo máximo de 7dias en la dirección MZ C CV JULIO CESAR TELLO primer priso.\10\10 Por promoción le entregamos 60 b de velocidad por  los 2 primeros meses sin costo adicional, la cual será entregada 15 dias calendarios posterior a su instalaciòn.\10\10 El servicio que usted esta contratando incluye:\10 Equipo TELEFONICO, MODEM HFC COMODATO, y 2HD, sin costo adicional, propiedad de Movistar. \10\10Usted acepta que esta adquiriendo 1 punto adicional SMART HD, cuya renta mensual es de 15.90 incluido IGV.\10\10 Siendo hoy 25 de septiembre del 2020 registramos su solicitud con el numero #123005"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlbtnaceptar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="50dp" android:layout_below="@+id/rltext">
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textSize="12dp" android:textColor="@color/colorWhite" android:id="@+id/btnacepta" android:background="@drawable/botonpulsado" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="50dp" android:text="Si, acepto" android:layout_below="@+id/btnevaluar"/>
                <Button android:textSize="12dp" android:textColor="@color/colorWhite" android:id="@+id/btnnoacepto" android:background="@drawable/boton_redondeado_accion_normal" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="No, acepto" android:layout_below="@+id/btnevaluar"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
